@model List<Category>

@{
    ViewData["Title"] = "_CategoriesPartial";
}

<style>
    .display-4 {
        text-align: center;
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
        font-size: 3rem;
        color: white;
        margin-bottom: 30px;
    }

    .category-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        margin: 20px;
    }

    .category-form {
        display: inline-block;
    }

    .category-button {
        position: relative;
        width: 300px;
        height: 340px; /* Adjusted height to include space for text */
        border: none;
        cursor: pointer;
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        justify-content: flex-end; /* Ensures the text stays at the bottom */
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .category-button:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

    .category-image {
        flex: 1;
        width: 100%;
        background-size: cover;
        background-position: center;
    }

    .category-text {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        width: 100%;
        text-align: center;
        padding: 15px;
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>

<h3 class="display-4">CATEGORIES</h3>

<div class="category-container">
    @foreach (var category in Model)
    {
        <div class="category-form">
            <form asp-controller="Home" asp-action="SelectCategory">
                <input type="hidden" name="categoryId" value="@category.CategoryID" />
                <button type="submit" class="category-button">
                    <div class="category-image" style="background-image: url('@category.ImagePath');"></div>
                    <div class="category-text">@category.CategoryName.ToUpper()</div>
                </button>
            </form>
        </div>
    }
</div>
