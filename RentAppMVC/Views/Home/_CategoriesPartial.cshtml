@model List<Category>

@{
    ViewData["Title"] = "_CategoriesPartial";
}

<style>
    .display-4 {
        text-align: center;
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
        font-size: 300;
        color: white; /* Set text color to white */
    }

    .big-square-form {
        display: inline-block;
        margin: 10px;
    }

        .big-square-form button {
            width: 340px; /* Set the width of the button */
            height: 340px; /* Set the height of the button */
            background-color: black; /* Set the background color to black */
            color: white; /* Set text color to white */
            font-size: 32px; /* Adjust font size as needed */
            border: none; /* Remove border */
            cursor: pointer; /* Add pointer cursor */
            border-radius: 10px; /* Add some border-radius for rounded corners */
            display: flex; /* Align text vertically and horizontally */
            align-items: center; /* Center text vertically */
        }
</style>

<style>
    .category-button {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 10px; /* juster efter behov */
        height: 10px; /* juster efter behov */
        background-size: cover;
        background-position: center;
        border: none;
        cursor: pointer;
        justify-content: flex-end; /* Placerer teksten nederst i knappen */
    }

    .category-text {
        background-color: rgba(0, 0, 0, 0.8); /* Juster gennemsigtighed efter behov */
        color: white;
        padding: 10px;
    }

</style>

<h3 class="display-4">CATEGORIES</h3>

@foreach (var category in Model)
{
    <div class="big-square-form">
        <form asp-controller="Home" asp-action="SelectCategory">
            <input type="hidden" name="categoryId" value="@category.CategoryID" />
            <button type="submit" class="category-button" style="background-image: url('@category.ImagePath');">
                <div class="category-text">@category.CategoryName.ToUpper()</div>
            </button>
        </form>
    </div>
}
