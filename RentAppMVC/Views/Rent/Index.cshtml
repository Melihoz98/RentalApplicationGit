@{
    ViewData["Title"] = "Rent Equipment";
}

<h1>Select Date and Time Interval</h1>

<form method="post" asp-action="ConfirmDateTime">
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="startTime">Start Time:</label>
        <input type="time" id="startTime" name="startTime" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="endTime">End Time:</label>
        <input type="time" id="endTime" name="endTime" class="form-control" required />
    </div>
    <!-- Tilføj en skjult input til at gemme returnUrl -->
    <input type="hidden" name="returnUrl" value="@Url.Action("AddToCart", "ShoppingCart")" />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
