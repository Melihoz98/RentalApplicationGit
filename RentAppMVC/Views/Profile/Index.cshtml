@model RentAppMVC.Models.ProfileViewModel

<h2>Profile</h2>

<form id="customerTypeForm">
    <div class="form-group">
        <label class="form-check-label">
            <input type="radio" name="customerType" value="private" checked> Private Customer
        </label>
    </div>
    <div class="form-group">
        <label class="form-check-label">
            <input type="radio" name="customerType" value="business"> Business Customer
        </label>
    </div>
</form>

<div id="privateCustomerForm" style="display:block;">
    @Html.Partial("Private/_PrivateCustomerForm", Model.PrivateCustomer)
</div>

<div id="businessCustomerForm" style="display:none;">
    @Html.Partial("Business/_BusinessCustomerForm", Model.BusinessCustomer)
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[name="customerType"]').change(function () {
                var value = $(this).val();
                if (value === 'private') {
                    $('#privateCustomerForm').show();
                    $('#businessCustomerForm').hide();
                } else if (value === 'business') {
                    $('#privateCustomerForm').hide();
                    $('#businessCustomerForm').show();
                }
            });
        });
    </script>
}
