@model RentAppMVC.Models.ChooseDateTimeViewModel

<form method="post" asp-action="ConfirmDateTime">
    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" class="form-control" asp-for="StartDate" required />
    </div>
    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate" class="form-control" asp-for="EndDate" required />
    </div>
    <div class="form-group">
        <label for="startTime">Start Time:</label>
        <input type="time" id="startTime" name="startTime" class="form-control" asp-for="StartTime" required />
    </div>
    <div class="form-group">
        <label for="endTime">End Time:</label>
        <input type="time" id="endTime" name="endTime" class="form-control" asp-for="EndTime" required />
    </div>

    <!-- Remove hidden input fields -->

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>
